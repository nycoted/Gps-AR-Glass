<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- WebView : affiche Google Maps / Street View -->

    <!-- Overlay : flÃ¨che AR -->
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/gpsInfo"
            android:layout_width="119dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="10dp"
            android:layout_x="306dp"
            android:layout_y="347dp"
            android:text="Lat:0.0, Lng:0.0"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="47dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_x="61dp"
            android:layout_y="113dp"
            android:src="@android:drawable/arrow_up_float" />
    </WebView>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Overlay : infos GPS ou commande vocale -->

</FrameLayout>