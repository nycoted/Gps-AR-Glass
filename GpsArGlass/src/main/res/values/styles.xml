<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thème principal de l’application -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <!-- Personnalisation des couleurs -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonStyle">@android:style/Widget.Holo.Button</item>
    </style>

    <!-- Style pour les titres -->
    <style name="AppTheme.TextAppearance.Title" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <!-- Style pour le texte normal -->
    <style name="AppTheme.TextAppearance.Body" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style pour les boutons -->
    <style name="AppTheme.Button" parent="@android:style/Widget.Holo.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>

</resources>